<Window x:Class="Ugozi_Comparator.BeginDownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ugozi_Comparator"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid x:Name="DownloadWindow" Background="#FF00FFE8">
        <Label Content="У вас нету нужного файла &#x9;(」°ロ°)」" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Width="772" FontFamily="Verdana" FontSize="38" FontWeight="Bold" Height="89"/>
        <Label Content="Скачать?&#xD;&#xA;" HorizontalAlignment="Left" Margin="330,255,0,0" VerticalAlignment="Top" Width="110" FontFamily="Verdana" FontSize="18" FontStyle="Italic" FontWeight="Bold" Height="31"/>
        <Button x:Name="Download" Content="Да" HorizontalAlignment="Left" Height="95" Margin="80,225,0,0" VerticalAlignment="Top" Width="240" Click="YES" FontFamily="Verdana" FontWeight="Bold" FontSize="64" Background="#FF09C51A"/>
        <Button x:Name="DoNotDownload" Content="Нет" HorizontalAlignment="Left" Height="95" Margin="445,225,0,0" VerticalAlignment="Top" Width="240" Click="NO" FontFamily="Verdana" FontWeight="Bold" FontSize="64" Background="Red"/>
    </Grid>
</Window>
