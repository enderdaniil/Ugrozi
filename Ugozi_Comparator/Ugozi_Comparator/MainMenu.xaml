<Window x:Class="Ugozi_Comparator.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ugozi_Comparator"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid Background="#FFFFE800">
        <Button Content="Button" HorizontalAlignment="Left" Margin="320,45,0,0" VerticalAlignment="Top" Width="160" Height="45"/>
        <Button x:Name="FullRecordCheck" Content="Просмотр полного списка" HorizontalAlignment="Left" Margin="290,45,0,0" VerticalAlignment="Top" Width="190" Height="70" Background="White" FontFamily="Verdana" Click="Full_Records_Check" FontSize="13"/>
        <Button x:Name="SmallRecordsCheck" Content="Просмотр сокращённого списка" HorizontalAlignment="Left" Margin="290,155,0,0" VerticalAlignment="Top" Width="190" Height="70" Background="#FF8DFFEF" FontFamily="Verdana" FontSize="11" Click="Small_Records_Check"/>
        <Button x:Name="Update" Content="Обновление" HorizontalAlignment="Left" Margin="290,280,0,0" VerticalAlignment="Top" Width="190" Height="70" Background="#FFFFA2A2" Click="Update_Click" FontFamily="Verdana" FontSize="20"/>

    </Grid>
</Window>
